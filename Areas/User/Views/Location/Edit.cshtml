@using Microsoft.AspNetCore.Mvc.ViewFeatures
@model Wayfarer.Models.ViewModels.AddLocationViewModel

@{
    ViewData["BodyClass"] = "container-fluid";
    ViewData["LoadLeaflet"] = true;
    ViewData["LoadQuill"] = true;
    ViewData["LoadTomSelect"] = true;
}

<h1 class="fs-3 text-center">@ViewData["Title"]</h1>

<div class="row">
    <!-- Location Form Column -->
    <div class="col-md-5">
        <div class="card shadow-sm mb-4">
            <div class="card-header text-bg-primary">
                <h2 class="fs-4">Edit Location</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" id="locationForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label for="Latitude" class="col-sm-2 col-form-label">Latitude <span class="text-danger">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="Latitude" name="Latitude" value="@Model.Latitude" required />
                        </div>
                        <label for="Longitude" class="col-sm-2 col-form-label">Longitude <span class="text-danger">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="Longitude" name="Longitude" value="@Model.Longitude" required />
                        </div>
                    </div>
                    <small id="coordinatesHelp" class="form-text text-muted">
                        Click on the map to select your location. The latitude and longitude will be automatically filled in.
                    </small>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="Altitude">Altitude (meters)</label>
                                <input type="number" class="form-control mt-2" id="Altitude" name="Altitude" value="@Model.Altitude" step="any" />
                            </div>
                        </div>

                        <div class="col-md-9">
                            <div class="form-group">
                                <label for="SelectedActivityId" class="form-label">Activity Type</label>
                                @{
                                    var selectedActivity = Model.ActivityTypes?.FirstOrDefault(a => a.Selected);
                                }
                                <select asp-for="SelectedActivityId" id="activitySelect" class="form-select"
                                        data-api-url="/api/activity">
                                    <option value="">Select an Activity</option>
                                    @if (selectedActivity != null)
                                    {
                                        <option value="@selectedActivity.Value" selected>@selectedActivity.Text</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(m => m.SelectedActivityId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Address">Address</label>
                        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
                    </div>
                    <div class="form-group">
                        <label for="LocalTimestamp">Local Date and Time <span class="text-danger">*</span></label>
                        <input type="datetime-local"
                               class="form-control"
                               id="LocalTimestamp"
                               asp-for="LocalTimestamp"
                               value="@Model.LocalTimestamp.ToString("yyyy-MM-ddTHH:mm")" />
                        @Html.ValidationMessageFor(m => m.LocalTimestamp, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="notes">Add Notes</label>
                        <div id="notes" data-notes-content="@Model.Notes"></div>
                        <!-- Hidden input field for the notes content -->
                        <input type="hidden" name="Notes" id="hiddenNotes" value="@Model.Notes" />
                        <small class="text-muted">
                            You cannot paste images in here. Use the image button from the toolbar to insert an image from a URL.
                        </small>
                    </div>

                    <div class="form-group">
                        <small class="text-muted">
                            <span class="text-danger">*</span> Fields are required.
                        </small>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit"
                                class="btn btn-primary"
                                name="saveAction"
                                value="save"
                                title="Save your changes and keep editing">Save</button>
                        <button type="submit"
                                class="btn btn-outline-secondary"
                                name="saveAction"
                                value="return"
                                title="Save your changes and go back to the previous view">Save &amp; Return</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Map Column -->
    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-header text-bg-primary">
                <h2 class="fs-4">Map View</h2>
            </div>
            <div class="card-body p-1">
                <div id="mapContainer" style="height: 575px;" data-lat="@Model.Latitude" data-lon="@Model.Longitude"></div>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-outline-danger" id="clearButton">Clear Location</button>
            </div>
        </div>
    </div>

    <!-- Modal for image URL input -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Insert Image URL</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label for="imageUrl" class="form-label">Image URL</label>
                    <input type="text" id="imageUrl" class="form-control" placeholder="Enter the image URL here">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="insertImageBtn" class="btn btn-primary">Insert Image</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.FrontendViewScripts()
}
