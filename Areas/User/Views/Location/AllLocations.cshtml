@{
    ViewData["BodyClass"] = "container-fluid";
    ViewData["LoadTomSelect"] = true;
}

<div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
    <!-- Left: Title + Stats -->
    <div class="d-flex flex-wrap align-items-baseline gap-2">
        <h1 class="fs-4 my-0">@ViewData["Title"]</h1>
        <span id="timeline-summary" class="small font-monospace text-muted"></span>
    </div>

    <!-- Right: Export dropdown + Add button -->
    <div class="d-flex flex-wrap align-items-center gap-2">
        <div class="btn-group">
            <button
                type="button"
                class="btn btn-outline-primary btn-sm dropdown-toggle"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                title="Export all of your location data in a selected format (CSV, GPX, GeoJSON, KML)">
                Export Location Data
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" asp-controller="LocationExport" asp-action="GeoJson">GeoJSON</a></li>
                <li><a class="dropdown-item" asp-controller="LocationExport" asp-action="Csv">CSV</a></li>
                <li><a class="dropdown-item" asp-controller="LocationExport" asp-action="Gpx">GPX</a></li>
                <li><a class="dropdown-item" asp-controller="LocationExport" asp-action="Kml">KML</a></li>
            </ul>
        </div>
        <a class="btn btn-success btn-sm" asp-action="Create" title="Add a new location manually using the map.">
            Add Location
        </a>
    </div>
</div>


<!-- Search and Delete Buttons -->
<div class="d-flex justify-content-between align-items-center my-2">
    <button id="deleteSelected" class="btn btn-danger btn-sm" title="Delete selected locations">Delete Selected</button>
    <!-- Search Button -->
    <button id="searchToggleBtn" class="btn btn-secondary btn-sm">Search</button>
</div>

<!-- Advanced Search Panel (Initially hidden) -->
<div id="advancedSearchPanel" class="mt-3" style="display: none;">
    <div class="card">
        <div class="card-body">
            <form id="advancedSearchForm">
                <div class="row">
                    <div class="col-md-4">
                        <label for="fromTimestamp" class="form-label">From Date</label>
                        <input type="date" class="form-control" id="fromTimestamp">
                    </div>
                    <div class="col-md-4">
                        <label for="toTimestamp" class="form-label">To Date</label>
                        <input type="date" class="form-control" id="toTimestamp">
                    </div>
                    <div class="col-md-4">
                        <label for="latitude" class="form-label">Latitude</label>
                        <input type="number" step="any" class="form-control" id="latitude">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <label for="longitude" class="form-label">Longitude</label>
                        <input type="number" step="any" class="form-control" id="longitude">
                    </div>
                    <div class="col-md-4">
                        <label for="activity" class="form-label">Activity</label>
                        <input type="text" class="form-control" id="activity">
                    </div>
                    <div class="col-md-4">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="country">
                    </div>
                    <div class="col-md-4">
                        <label for="region" class="form-label">Region</label>
                        <input type="text" class="form-control" id="region">
                    </div>
                    <div class="col-md-4">
                        <label for="place" class="form-label">City</label>
                        <input type="text" class="form-control" id="place">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea class="form-control" id="notes"></textarea>
                    </div>
                </div>

                <div class="row mt-1">
                    <div class="col-2"><button type="submit" class="btn btn-primary btn-sm mt-3">Search</button></div>
                    <div class="col-2"><button type="button" class="btn btn-secondary btn-sm mt-3" id="clearSearchForm">Clear</button></div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="table-responsive table-normal-height">
    <table class="table table-striped table-sm table-hover" id="locationsTable">
        <thead>
        <tr>
            <th><input type="checkbox" id="selectAll"/></th>
            <th>Date time &amp; Timezone</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th class="text-center">Accuracy (m)</th>
            <th class="text-center">Speed (km/h)</th>
            <th class="text-center">Altitude (m)</th>
            <th>Activity</th>
            <th>Address</th>
            <th>Place</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <!-- Location rows will be populated here via JavaScript -->
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center align-items-center my-3">
    <div id="pagination" class="pagination-container"></div>
</div>


<!-- Modal HTML -->
<div class="modal fade" id="locationModal" tabindex="-1" aria-labelledby="locationModalLabel" data-bs-backdrop="static">
    <div class="modal-dialog  modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-bg-primary  d-flex">
                <h5 class="modal-title" id="locationModalLabel">Location Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.FrontendViewScripts()
}
