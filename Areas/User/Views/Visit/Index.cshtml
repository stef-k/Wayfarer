@{
    ViewData["BodyClass"] = "container-fluid";
}

<div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
    <div class="d-flex flex-wrap align-items-baseline gap-2">
        <h1 class="fs-4 my-0">@ViewData["Title"]</h1>
        <span id="visit-summary" class="small font-monospace text-muted"></span>
    </div>
</div>

<!-- Search and Delete Buttons -->
<div class="d-flex justify-content-between align-items-center my-2">
    <button id="deleteSelected" class="btn btn-danger btn-sm" title="Delete selected visits">Delete Selected</button>
    <button id="searchToggleBtn" class="btn btn-secondary btn-sm">Search</button>
</div>

<!-- Advanced Search Panel (Initially hidden) -->
<div id="advancedSearchPanel" class="mt-3" style="display: none;">
    <div class="card">
        <div class="card-body">
            <form id="advancedSearchForm">
                <div class="row">
                    <div class="col-md-3">
                        <label for="fromDate" class="form-label">From Date</label>
                        <input type="date" class="form-control" id="fromDate">
                    </div>
                    <div class="col-md-3">
                        <label for="toDate" class="form-label">To Date</label>
                        <input type="date" class="form-control" id="toDate">
                    </div>
                    <div class="col-md-3">
                        <label for="tripFilter" class="form-label">Trip</label>
                        <select class="form-select" id="tripFilter">
                            <option value="">All Trips</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="statusFilter" class="form-label">Status</label>
                        <select class="form-select" id="statusFilter">
                            <option value="">All</option>
                            <option value="open">Open (Still visiting)</option>
                            <option value="closed">Closed</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <label for="placeNameFilter" class="form-label">Place Name</label>
                        <input type="text" class="form-control" id="placeNameFilter" placeholder="Search place name...">
                    </div>
                    <div class="col-md-4">
                        <label for="regionFilter" class="form-label">Region</label>
                        <input type="text" class="form-control" id="regionFilter" placeholder="Search region...">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <button type="submit" class="btn btn-primary btn-sm">Search</button>
                    </div>
                    <div class="col-2">
                        <button type="button" class="btn btn-secondary btn-sm" id="clearSearchForm">Clear</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="table-responsive table-normal-height mt-3">
    <table class="table table-striped table-sm table-hover" id="visitsTable">
        <thead>
            <tr>
                <th><input type="checkbox" id="selectAll" /></th>
                <th>Visit Date</th>
                <th>Place</th>
                <th>Trip</th>
                <th>Region</th>
                <th class="text-center">Dwell Time</th>
                <th class="text-center" title="GPS pings recorded during this visit within the place's proximity radius">
                    Locations <i class="bi bi-info-circle text-muted" style="font-size: 0.75rem;"></i>
                </th>
                <th class="text-center">Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Visit rows will be populated via JavaScript -->
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center align-items-center my-3">
    <div id="pagination" class="pagination-container"></div>
</div>

<!-- View Visit Modal -->
<div class="modal fade" id="visitModal" tabindex="-1" aria-labelledby="visitModalLabel" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-bg-primary d-flex">
                <h5 class="modal-title" id="visitModalLabel">Visit Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.FrontendViewScripts()
}
