@model List<Wayfarer.Models.Trip>

@{
    ViewData["Title"] = "My Trips";
}

<h2>@ViewData["Title"]</h2>

<a asp-area="User" asp-controller="Trip" asp-action="Create" class="btn btn-primary mb-3">Create New Trip</a>

@if (!Model.Any())
{
    <p>You don't have any trips yet.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Start</th>
            <th>End</th>
            <th>Public</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Name</td>
                <td>@trip.StartDate?.ToString("yyyy-MM-dd")</td>
                <td>@trip.EndDate?.ToString("yyyy-MM-dd")</td>
                <td>@(trip.IsPublic ? "Yes" : "No")</td>
                <td>
                    <a asp-area="User" asp-controller="Trip" asp-action="Edit" asp-route-id="@trip.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-area="User" asp-controller="Trip" asp-action="Details" asp-route-id="@trip.Id" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}