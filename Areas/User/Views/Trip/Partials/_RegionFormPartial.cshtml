@model Wayfarer.Models.Region
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (!ViewData.ModelState.IsValid)
{
    <div class="region-form-errors" data-errors="true">
        <ul class="text-danger small mb-2">
            @foreach (var entry in ViewData.ModelState.Values)
            {
                foreach (var error in entry.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<form id="region-form-@Model.Id" class="accordion-item p-3 border rounded mb-2">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TripId" />
    <input type="hidden" asp-for="UserId" />
    
    <h5>New Region</h5>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="mb-2">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="d-flex justify-content-end mt-2 gap-2">
        <button type="button" class="btn btn-sm btn-secondary btn-region-cancel" data-region-id="@Model.Id">Cancel</button>
        <button type="button" class="btn btn-sm btn-primary btn-region-save" data-region-id="@Model.Id">Save Region</button>
    </div>
</form>