@model Wayfarer.Models.Trip
@{
    var modeIcons = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
    {
        ["walk"] = "bi-person-walking",
        ["drive"] = "bi-car-front",
        ["train"] = "bi-train-front",
        ["bus"] = "bi-bus-front",
        ["bike"] = "bi-bicycle",
        ["boat"] = "bi-boat",
        ["flight"] = "bi-airplane",
        ["taxi"] = "bi-taxi-front",
        ["tram"] = "bi-train-lightrail-front"
    };
}

@if (Model.Segments == null || !Model.Segments.Any())
{
    <div class="alert alert-info" role="alert">
        No travel segments added yet.
    </div>
}
else
{
    <div class="accordion mb-4" id="segments-list">
        @foreach (var segment in Model.Segments.OrderBy(s => s.DisplayOrder))
        {
            var fromName = segment.FromPlace?.Name ?? "Start";
            var toName = segment.ToPlace?.Name ?? "End";
            var iconClass = modeIcons.TryGetValue(segment.Mode ?? "", out var icon) ? icon : "bi-geo-alt";
            var duration = segment.EstimatedDuration?.ToString(@"hh\:mm") ?? "—";
            var distance = segment.EstimatedDistanceKm?.ToString("0.##") ?? "—";

            <div class="accordion-item segment-list-item"
                 id="segment-item-@segment.Id"
                 data-segment-id="@segment.Id"
                 data-segment-name="@($"{segment.Mode}: {fromName} → {toName}")">
                <div class="accordion-header d-flex align-items-center p-2 justify-content-between">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-grip-vertical drag-handle me-2"></i>
                        <i class="bi @iconClass me-1"></i>
                        <strong>@segment.Mode</strong>
                    </div>

                    <div class="btn-group">
                        <input type="checkbox"
                               class="form-check-input me-2 btn-segment-toggle-visibility"
                               id="segment-visibility-@segment.Id"
                               data-segment-id="@segment.Id"
                               checked
                               title="Show/Hide this segment on map" />
                        <button class="btn btn-sm btn-outline-primary btn-edit-segment" title="Edit Segment" data-segment-id="@segment.Id">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger btn-delete-segment" title="Delete Segment" data-segment-id="@segment.Id">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>

                <div class="accordion-collapse show">
                    <div class="accordion-body small text-muted">
                        <div class="mb-1">
                            <span><i class="bi bi-geo-fill text-success me-1"></i>@fromName</span>
                            <span class="mx-2"><i class="bi bi-arrow-right-short"></i></span>
                            <span><i class="bi bi-geo-fill text-danger me-1"></i>@toName</span>
                        </div>
                        <div>
                            Duration: <strong>@duration</strong> |
                            Distance: <strong>@distance km</strong>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(segment.Notes))
                        {
                            <div class="mt-2">
                                <button type="button" class="btn btn-sm btn-link p-0"
                                        data-bs-toggle="modal" data-bs-target="#segmentNotesModal-@segment.Id"
                                        title="View notes for this segment">
                                    <i class="bi bi-info-circle me-1"></i> View notes
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @* Optional Modal for Notes *@
            @if (!string.IsNullOrWhiteSpace(segment.Notes))
            {
                <div class="modal fade" id="segmentNotesModal-@segment.Id" tabindex="-1"
                     aria-labelledby="segmentNotesLabel-@segment.Id" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="segmentNotesLabel-@segment.Id">
                                    Notes for <span class="fw-semibold">@segment.Mode from @fromName to @toName</span>
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @Html.Raw(segment.Notes)
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-sm btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}
