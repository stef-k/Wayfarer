@model Wayfarer.Models.Trip
@{
    var modeIcons = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
    {
        ["walk"] = "bi-person-walking",
        ["drive"] = "bi-car-front",
        ["train"] = "bi-train-front",
        ["bus"] = "bi-bus-front",
        ["bike"] = "bi-bicycle",
        ["boat"] = "bi-boat",
        ["flight"] = "bi-airplane",
        ["taxi"] = "bi-taxi-front",
        ["tram"] = "bi-train-lightrail-front"
    };
}

@if (Model.Segments == null || !Model.Segments.Any())
{
    <div class="alert alert-info" role="alert">
        No travel segments added yet.
    </div>
}
else
{
    <ul class="list-group mb-4" id="segments-list">
        @foreach (var segment in Model.Segments.OrderBy(s => s.DisplayOrder))
        {
            var fromName = segment.FromPlace?.Name ?? "Start";
            var toName = segment.ToPlace?.Name ?? "End";
            var iconClass = modeIcons.TryGetValue(segment.Mode ?? "", out var icon) ? icon : "bi-geo-alt";
            var duration = segment.EstimatedDuration?.ToString(@"hh\:mm") ?? "—";
            var distance = segment.EstimatedDistanceKm?.ToString("0.##") ?? "—";

            <li class="segment-list-item list-group-item d-flex justify-content-between align-items-center"
                id="segment-item-@segment.Id"
                data-segment-id="@segment.Id"
                data-segment-name="@($"{segment.FromPlace?.Name} → {segment.ToPlace?.Name}")">
                <i class="bi bi-grip-vertical drag-handle me-1"></i>
                <div class="me-auto">
                    <div class="d-flex align-items-center gap-1">
                        <i class="bi @iconClass"></i>
                        <strong class="text-capitalize mb-0">@segment.Mode</strong>
                        @if (!string.IsNullOrWhiteSpace(segment.Notes))
                        {
                            <button type="button" class="btn btn-sm btn-link p-0 ms-2"
                                    data-bs-toggle="modal" data-bs-target="#segmentNotesModal-@segment.Id"
                                    title="@segment.Mode from @segment?.FromPlace?.Name to @segment?.ToPlace?.Name - Click to view notes"
                                    style="line-height: 1;">
                                <i class="bi bi-info-circle"></i>
                            </button>
                        }
                    </div>
                    <div class="text-muted small d-flex align-items-center gap-2">
                        <span>
                            <i class="bi bi-geo-fill text-success me-1"></i>
                            @fromName
                        </span>
                        <span><i class="bi bi-arrow-right-short text-secondary"></i></span>
                        <span>
                            <i class="bi bi-geo-fill text-danger me-1"></i>
                            @toName
                        </span>
                    </div>

                    <div class="text-muted small">
                        Duration: @duration |
                        Distance: @distance km
                    </div>
                </div>

                <div class="btn-group">
                    <input type="checkbox"
                           class="form-check-input me-2 btn-segment-toggle-visibility"
                           id="segment-visibility-@segment.Id"
                           data-segment-id="@segment.Id"
                           checked
                           title="Show/Hide this segment on map" />
                    <button class="btn btn-sm btn-outline-primary btn-edit-segment" title="Edit Segment" data-segment-id="@segment.Id">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger btn-delete-segment" title="Delete Segment" data-segment-id="@segment.Id">
                        <i class="bi bi-trash"></i>
                    </button>

                </div>
            </li>
            @if (!string.IsNullOrWhiteSpace(segment.Notes))
            {
                <div class="modal fade" id="segmentNotesModal-@segment.Id" tabindex="-1"
                     aria-labelledby="segmentNotesLabel-@segment.Id" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="segmentNotesLabel-@segment.Id">
                                    Notes for <span class="fw-semibold">@segment.Mode from @segment?.FromPlace?.Name to @segment?.ToPlace?.Name</span>
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @Html.Raw(segment?.Notes)
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-sm btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </ul>
}
