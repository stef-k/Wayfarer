@model List<Wayfarer.Models.HiddenArea>
@{
    ViewData["Title"] = "Hidden Areas";
}

<h2 class="mb-4">Hidden Areas</h2>

<div class="alert alert-light small mb-3">
    <i class="bi bi-lightbulb me-1"></i>
    <strong>How it works:</strong> Hidden areas mask locations from your public timeline. Draw polygons around sensitive areas
    like your home or workplace. If a location falls within any hidden area, it will not be visible on your public timeline.
    Overlapping areas work together - any match hides the location.
</div>
<a asp-area="User" asp-controller="HiddenAreas" asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Add Hidden Area
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have not added any hidden areas yet.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
        <tr class="text-center">
            <th>Name</th>
            <th style="width: 50%;">Description</th>
            <th colspan="2">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var area in Model)
        {
            <tr>
                <td>@area.Name</td>
                <td>@area.Description</td>
                <td class="text-center">
                    <a asp-area="User" asp-controller="HiddenAreas" asp-action="Edit" asp-route-id="@area.Id"
                       class="btn btn-sm btn-secondary">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </td>
                <td class="text-center"><a asp-area="User" asp-controller="HiddenAreas" asp-action="Delete" asp-route-id="@area.Id"
                       class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a></td>
            </tr>
        }
        </tbody>
    </table>
}