@model IEnumerable<Wayfarer.Models.Group>
@{
    ViewData["Title"] = "Groups";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Groups</h2>
    <a class="btn btn-primary" asp-area="Manager" asp-controller="Groups" asp-action="Create">New Group</a>
  </div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
        <th>Members</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var g in Model)
    {
        <tr data-group-id="@g.Id">
            <td>@g.Name</td>
            <td>@g.Description</td>
            <td>@g.GroupType</td>
            <td>
                @{
                    var counts = ViewBag.MemberCounts as IDictionary<Guid,int>;
                    var cnt = counts != null && counts.ContainsKey(g.Id) ? counts[g.Id] : 0;
                }
                <span class="badge bg-secondary js-member-count" data-group-id="@g.Id">@cnt</span>
            </td>
            <td class="text-nowrap">
                <a class="btn btn-sm btn-secondary" asp-area="Manager" asp-controller="Groups" asp-action="Edit" asp-route-id="@g.Id">Edit</a>
                <a class="btn btn-sm btn-info" asp-area="Manager" asp-controller="Groups" asp-action="Members" asp-route-groupId="@g.Id">Members</a>
                <a class="btn btn-sm btn-primary" asp-area="Manager" asp-controller="Groups" asp-action="Map" asp-route-groupId="@g.Id">Map</a>
                <form asp-area="Manager" asp-controller="Groups" asp-action="ConfirmDelete" method="post" class="d-inline js-confirm" data-confirm-title="Delete Group" data-confirm-message="Are you sure you want to delete this group? This action cannot be undone.">
                    <input type="hidden" name="id" value="@g.Id" />
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
  </table>

@section Scripts {
    @Html.FrontendViewScripts()
}
