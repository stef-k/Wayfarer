@model IEnumerable<Wayfarer.Models.Group>
@{
    ViewData["Title"] = "Groups";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Groups</h2>
    <a class="btn btn-primary" asp-area="Manager" asp-controller="Groups" asp-action="Create">New Group</a>
  </div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var g in Model)
    {
        <tr>
            <td>@g.Name</td>
            <td>@g.Description</td>
            <td>@g.GroupType</td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-area="Manager" asp-controller="Groups" asp-action="Edit" asp-route-id="@g.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
  </table>

<script src="~/js/Areas/Manager/Groups/index.js"></script>

