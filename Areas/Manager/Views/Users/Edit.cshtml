@using Wayfarer.Models.ViewModels
@model Wayfarer.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<!-- Validation Errors -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary("Please correct the errors below.", true)
    </div>
}

<!-- Card Layout for Form -->
<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="Edit" asp-controller="Users" asp-route-id="@Model.Id" asp-area="Manager">
            @Html.AntiForgeryToken()

            <!-- Username (Read-only) -->
            <div class="mb-3">
                <label for="UserName" class="form-label">Username</label>
                <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" readonly />
            </div>

            <!-- Display Name -->
            <div class="mb-3">
                <label for="DisplayName" class="form-label">Display Name</label>
                @if (Model.IsProtected)
                {
                    <div class="form-text text-danger">This account is protected. Modify its status to make changes.</div>
                }
                else
                {
                    <input type="text" class="form-control" id="DisplayName" name="DisplayName" value="@Model.DisplayName" />
                    @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
                }
            </div>

            <!-- Active Status Toggle -->
            <div class="form-check form-switch mb-3">
                <input type="checkbox" class="form-check-input" id="IsActive" asp-for="IsActive" role="switch" />
                <label for="IsActive" class="form-check-label">Is Active</label>
            </div>

            <!-- Protected Status Toggle -->
            <div class="form-check form-switch mb-3">
                <input type="checkbox" class="form-check-input" id="IsProtected" asp-for="IsProtected" role="switch" />
                <label for="IsProtected" class="form-check-label">Is Protected</label>
            </div>

            <!-- Role Selection -->
            <div class="mb-3">
                <label for="Role" class="form-label">Role</label>
                @if (Model.IsProtected)
                {
                    <div class="form-text text-danger">This account is protected. Modify its status to make changes.</div>
                }
                else
                {
                    <select asp-for="Role" class="form-select">
                        <option value="User">User</option>
                        <option value="Vehicle">Vehicle</option>
                    </select>
                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                }
            </div>

            <!-- Submit Button -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
