@model Wayfarer.Models.ViewModels.PublicTripIndexVm

@{
    ViewData["Title"] = "Public Trips";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">Public Trips</h1>
            <p class="text-muted">Browse and discover trips shared by our community</p>
        </div>
    </div>

    <!-- Sticky Control Bar -->
    <div class="d-flex align-items-center gap-2 flex-wrap sticky-top bg-body pt-2 pb-3 border-bottom" style="top:4rem; z-index: 1029;">
        <!-- Search Form -->
        <form class="d-flex flex-grow-1" method="get" style="max-width: 500px;">
            <input type="hidden" name="view" value="@Model.View" />
            <input type="hidden" name="sort" value="@Model.Sort" />
            <div class="input-group">
                <input name="q" value="@Model.Q" class="form-control" placeholder="Search trips..." aria-label="Search trips" />
                <button class="btn btn-outline-secondary" type="submit" aria-label="Search">
                    <i class="bi bi-search"></i>
                </button>
                @if (!string.IsNullOrWhiteSpace(Model.Q))
                {
                    <a class="btn btn-outline-secondary"
                       asp-route="PublicTripsIndex"
                       asp-route-view="@Model.View"
                       asp-route-sort="@Model.Sort"
                       title="Clear search">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }
            </div>
        </form>

        <!-- View Toggle -->
        <div class="btn-group ms-auto" role="group" aria-label="View mode">
            <a class="btn btn-outline-secondary @(Model.View=="grid"?"active":"")"
               asp-route="PublicTripsIndex"
               asp-route-view="grid"
               asp-route-q="@Model.Q"
               asp-route-sort="@Model.Sort"
               asp-route-page="@Model.Page"
               title="Grid view"
               aria-label="Grid view">
                <i class="bi bi-grid-3x3-gap"></i>
            </a>
            <a class="btn btn-outline-secondary @(Model.View=="list"?"active":"")"
               asp-route="PublicTripsIndex"
               asp-route-view="list"
               asp-route-q="@Model.Q"
               asp-route-sort="@Model.Sort"
               asp-route-page="@Model.Page"
               title="List view"
               aria-label="List view">
                <i class="bi bi-list"></i>
            </a>
        </div>

        <!-- Sort Dropdown -->
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-sort-down"></i> Sort
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item @(Model.Sort=="updated_desc"?"active":"")"
                       asp-route="PublicTripsIndex"
                       asp-route-sort="updated_desc"
                       asp-route-view="@Model.View"
                       asp-route-q="@Model.Q">
                        Updated (newest)
                    </a>
                </li>
                <li>
                    <a class="dropdown-item @(Model.Sort=="name_asc"?"active":"")"
                       asp-route="PublicTripsIndex"
                       asp-route-sort="name_asc"
                       asp-route-view="@Model.View"
                       asp-route-q="@Model.Q">
                        Name (A–Z)
                    </a>
                </li>
                <li>
                    <a class="dropdown-item @(Model.Sort=="name_desc"?"active":"")"
                       asp-route="PublicTripsIndex"
                       asp-route-sort="name_desc"
                       asp-route-view="@Model.View"
                       asp-route-q="@Model.Q">
                        Name (Z–A)
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Results Summary -->
    @if (Model.Total > 0)
    {
        <div class="text-muted small mb-3">
            Showing @((Model.Page - 1) * Model.PageSize + 1)–@Math.Min(Model.Page * Model.PageSize, Model.Total) of @Model.Total trip@(Model.Total == 1 ? "" : "s")
        </div>
    }

    <!-- Grid or List View -->
    @if (Model.View == "list")
    {
        @await Html.PartialAsync("~/Areas/Public/Views/TripViewer/_PublicTripsList.cshtml", Model)
    }
    else
    {
        @await Html.PartialAsync("~/Areas/Public/Views/TripViewer/_PublicTripsGrid.cshtml", Model)
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        @await Html.PartialAsync("~/Areas/Public/Views/TripViewer/_Pager.cshtml", Model)
    }
</div>

<!-- Quick View Modal -->
<div class="modal fade" id="tripQuickView" tabindex="-1" aria-labelledby="tripQuickViewLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tripQuickViewLabel">Trip Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content loaded via JavaScript -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/Areas/Public/Trip/index.js"></script>
}
