@model DeleteUserViewModel

<h1 class="text-center">Confirm User Deletion</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header text-bg-danger">
                    <h3 class="mb-0">Are you sure you want to delete this user?</h3>
                </div>
                <div class="card-body">
                    <h3 class="mb-3">User: @Model.Username - Display Name: @Model.DisplayName</h3>

                    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" asp-area="Admin" asp-controller="Users">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
