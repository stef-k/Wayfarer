@model IEnumerable<Wayfarer.Models.ActivityType>

<h1 class="text-center my-1 fs-3">@ViewData["Title"]</h1>

<div class="container">
    <!-- Create and Search Bar -->
    <div class="row mb-2">
        <div class="col-md-6">
            <a asp-action="Create" asp-controller="ActivityType" class="btn btn-success">Create New Activity Type</a>
        </div>
        <div class="col-md-6">
            <form method="get" asp-action="Index" class="d-flex">
                <input type="text" name="search" value="@ViewBag.Search" placeholder="Search activity types..." class="form-control me-2" />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>

    <!-- Activity Types Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Activity Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No activity types found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var activityType in Model)
                    {
                        <tr>
                            <td>@activityType.Name</td>
                            <td>@activityType.Description</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@activityType.Id" class="btn btn-primary btn-sm">Edit</a>

                                    <a asp-action="Delete" asp-route-id="@activityType.Id" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-area="Admin"
                       asp-action="Index"
                       asp-controller="ActivityType"
                       asp-route-page="@i"
                       asp-route-search="@ViewBag.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
