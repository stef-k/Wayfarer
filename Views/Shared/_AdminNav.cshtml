@model string
@{
    /// <summary>
    /// Admin navigation dropdown partial view.
    /// Receives the user's display name as the model to show in the dropdown button.
    /// </summary>
}
<div class="dropdown" style="margin-top: 2px;">
    <button class="btn dropdown-toggle text-truncate nav-user-btn" type="button" data-bs-toggle="dropdown"
            aria-expanded="false" title="@Model (Admin)">
        <i class="bi bi-shield-lock me-1"></i>@Model
    </button>
    <ul class="dropdown-menu user-menu">
        <li>
            <a class="dropdown-item" asp-action="Index" asp-area="Admin" asp-controller="Users">Users</a>
        </li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-area="Admin" asp-controller="Jobs">Jobs</a>
        </li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-area="Admin" asp-controller="AuditLogs">Audit Logs</a>
        </li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-area="Admin" asp-controller="Settings">Application Settings</a>
        </li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-area="Admin" asp-controller="ActivityType">Activity Types</a>
        </li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-area="Admin" asp-controller="Logs">Application Logs</a>
        </li>
        <li>
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage your account">My Account</a>
        </li>
    </ul>
</div>
