@using Wayfarer.Util
@model Wayfarer.Models.Trip
@{
    ViewData["LoadLeaflet"] = true;
    Layout = "_Layout";
    bool owner = ViewBag.IsOwner as bool? ?? false;
    bool hideSidebar = ViewContext.HttpContext.Request.Query["print"] == "1";
    /* full-height flex container instead of .container */
    ViewData["BodyClass"] = "container-fluid d-flex flex-column flex-fill p-0";
    ViewBag.Title = Model.Name;
}

<!-- wrapper that stretches between navbar & footer -->
<div id="trip-view"
     data-embed="@( (ViewBag.IsEmbed as bool? ?? false).ToString().ToLower() )"
     data-fullscreen-url="@Url.Action("View","TripViewer", new { id = Model.Id })"
     class="position-relative flex-grow-1"
     data-trip-lat="@Model.CenterLat"
     data-trip-lon="@Model.CenterLon"
     data-trip-zoom="@Model.Zoom">

    @if (hideSidebar)
    {
        <style>
            #sidebar-primary,
            #sidebar-secondary {
                display: none !important;
            }
        </style>
    }

    <!-- MAP (always full width) -->
    <main class="h-100">
        <div id="mapContainer" class="h-100 w-100"></div>
    </main>

    <!-- SIDEBAR – trip legend -->
    <aside id="sidebar-primary"
           class="position-absolute top-0 start-0 h-100 overflow-auto text-bg-light" data-collapsed="false">

        <!-- fixed header with collapse-handle + trip title + optional Edit -->
        <!-- ─── Trip legend header ─── -->
        <header class="border-bottom p-0 sticky-top bg-body" style="z-index: 2;">

            @* Responsive cover (shows only when URL present) *@
            @if (!string.IsNullOrWhiteSpace(Model.CoverImageUrl))
            {
                <div class="ratio ratio-21x9">
                    <img src="@Model.CoverImageUrl" class="img-fluid object-fit-cover w-100 h-100" alt="Cover for @Model.Name"/>
                </div>
            }

            @* Title + controls in one row *@
            <div class="px-2 py-2">
                <div class="d-flex align-items-center justify-content-between gap-2">

                    <!-- Trip title -->
                    <h5 class="mb-0 flex-shrink-1" style="font-size: 18px; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; line-height: 1.3; min-width: 0;" title="@Model.Name">
                        @Model.Name
                    </h5>

                    <!-- Right-side buttons -->
                    <div class="btn-group flex-shrink-0" role="group" aria-label="Map controls & actions">

                        <!-- 3) “More” dropdown with Edit + exports -->
                        <div class="btn-group" role="group">
                            <button id="btn-more-actions"
                                    type="button"
                                    class="btn btn-outline-primary btn-sm dropdown-toggle"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    title="More actions">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="btn-more-actions">
                                @if ((bool)(ViewBag.IsOwner ?? false))
                                {
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="User"
                                           asp-controller="Trip"
                                           asp-action="Edit"
                                           asp-route-id="@Model.Id"
                                           title="Edit Trip"
                                           target="_blank">
                                            <i class="bi bi-pencil-square me-1"></i>Edit
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider"/>
                                    </li>
                                }
                                @if (Model.IsPublic)
                                {
                                    <li>
                                        <a class="dropdown-item copy-url"
                                           href="#"
                                           data-url="@($"{Context.Request.Scheme}://{Context.Request.Host}/Public/Trips/{Model.Id}")"
                                           title="Copy public URL to clipboard">
                                            <i class="bi bi-share me-1"></i>Share (Copy URL)
                                        </a>
                                    </li>
                                    @* Clone button - show for authenticated users, login prompt for others *@
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        @if (!(bool)(ViewBag.IsOwner ?? false))
                                        {
                                            <li>
                                                <form asp-area="User"
                                                      asp-controller="Trip"
                                                      asp-action="Clone"
                                                      asp-route-id="@Model.Id"
                                                      method="post"
                                                      class="d-inline"
                                                      id="clone-trip-form">
                                                    <button type="submit"
                                                            class="dropdown-item"
                                                            title="Clone this trip to your account">
                                                        <i class="bi bi-files me-1"></i>Clone to My Trips
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li>
                                            <a class="dropdown-item"
                                               asp-area="Identity"
                                               asp-page="/Account/Login"
                                               asp-route-returnUrl="@Context.Request.Path"
                                               title="Login to clone this trip">
                                                <i class="bi bi-box-arrow-in-right me-1"></i>Login to Clone
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <hr class="dropdown-divider"/>
                                    </li>
                                }
                                <li>
                                <li>
                                    <a id="export-wayfarer"
                                       class="dropdown-item"
                                       asp-area=""
                                       asp-controller="TripExport"
                                       asp-action="ExportWayfarerKml"
                                       asp-route-id="@Model.Id"
                                       title="Export Trip to Wayfarer KML">
                                        <i class="bi bi-filetype-xml me-1"></i>Wayfarer KML
                                    </a>
                                </li>
                                <li>
                                    <a id="export-mymaps"
                                       class="dropdown-item"
                                       asp-area=""
                                       asp-controller="TripExport"
                                       asp-action="ExportGoogleMyMapsKml"
                                       asp-route-id="@Model.Id"
                                       title="Export Trip to Google My Maps KML">
                                        <i class="bi bi-map me-1"></i>Google My Maps KML
                                    </a>
                                </li>
                                <li>
                                    <a id="export-pdf"
                                       class="dropdown-item"
                                       asp-area=""
                                       asp-controller="TripExport"
                                       asp-action="ExportPdf"
                                       asp-route-id="@Model.Id"
                                       title="Export Trip to PDF guide" target="_blank">
                                        <i class="bi bi-filetype-pdf me-1"></i>Export PDF
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- 2) Recenter map -->
                        <button id="btn-trip-center"
                                type="button"
                                class="btn btn-outline-dark btn-sm"
                                title="Recenter the map">
                            <i class="bi bi-crosshair"></i>
                        </button>

                        <!-- Expand to readable view -->
                        <button id="btn-expand-readable"
                                type="button"
                                class="btn btn-outline-secondary btn-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#readableViewModal"
                                title="Expand to readable view">
                            <i class="bi bi-arrows-fullscreen"></i>
                        </button>

                        <!-- 1) Collapse legend -->
                        <button id="btn-collapse-sidebar"
                                type="button"
                                class="btn btn-outline-secondary btn-sm"
                                title="Hide legend">
                            <i class="bi bi-layout-sidebar-inset-reverse"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="row small px-2 pt-1 mb-2 gx-2">
                @if (!string.IsNullOrWhiteSpace(Model.User?.DisplayName))
                {
                    <div class="col-6">
                        <span class="text-muted">Trip by:</span> @Model.User.DisplayName
                    </div>
                }
                <div class="@(!string.IsNullOrWhiteSpace(Model.User?.DisplayName) ? "col-6" : "col-12")">
                    <span class="text-muted">Updated:</span> @Model.UpdatedAt.ToString("yyyy-MMM-dd HH:mm")
                </div>
            </div>

            @if (Model.Tags?.Count > 0)
            {
                <div class="px-2 pb-2">
                    <div class="d-flex flex-wrap gap-1" data-trip-tags>
                        @foreach (var tag in Model.Tags.OrderBy(t => t.Name))
                        {
                            <a href="@Url.RouteUrl("PublicTripsByTag", new { slug = tag.Slug })"
                               class="badge rounded-pill text-bg-secondary text-decoration-none"
                               style="font-size: 0.75rem;"
                               title="Filter by @tag.Name">
                                <i class="bi bi-tag-fill"></i> @tag.Name
                            </a>
                        }
                    </div>
                </div>
            }

            <div class="px-2 pb-2">
                <input id="legend-search" type="search" class="form-control form-control-sm"
                       placeholder="Search regions, places, areas, segments" autocomplete="off" />
            </div>
        </header>

        <!-- Trip meta: notes (scroll-safe) -->
        <section class="trip-meta border-bottom">

            @if (!string.IsNullOrWhiteSpace(Model.Notes))
            {
                <div class="trip-notes px-3 pb-2" style="max-height: 200px; overflow-y: auto;">
                    @Html.LinkifyHtml(Model.Notes)
                </div>
            }
        </section>

        <!-- regions accordion -->
        <div id="regions-accordion" class="accordion accordion-flush ">
            @{
                var unassignedRegion = @Model.Regions?.Where(r => r.Name == "Unassigned Places").FirstOrDefault();
                if (unassignedRegion?.Places?.Any() == true)
                {
                    @await Html.PartialAsync("~/Views/Trip/Partials/_RegionReadonly.cshtml", unassignedRegion)
                }
            }
            @foreach (var r in (Model.Regions ?? Enumerable.Empty<Region>()).Where(r => r.Name != "Unassigned Places").OrderBy(r => r.DisplayOrder))
            {
                @await Html.PartialAsync("~/Views/Trip/Partials/_RegionReadonly.cshtml", r)
            }
        </div>


        <!-- segments list -->
        @await Html.PartialAsync("~/Views/Trip/Partials/_SegmentReadonlyList.cshtml", Model)
    </aside>


    <!-- Details overlay (unchanged) -->
    <aside id="sidebar-secondary"
           class="position-absolute top-0 start-0 h-100 bg-white border-end overflow-auto"
           style="z-index:1055"></aside>
</div>

<!-- Generating-file overlay -->
<div class="modal fade" id="exportWait" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-body">
                <div class="d-flex align-items-center gap-2 mb-2">
                    <span class="spinner-border spinner-border-sm text-primary"></span>
                    <strong>Generating PDF Export</strong>
                </div>
                <div id="export-progress-message" class="text-muted small" style="min-height: 1.2em;">
                    Preparing export...
                </div>
            </div>
            <div class="modal-footer">
                <button id="export-cancel-btn" type="button" class="btn btn-danger btn-sm" style="display: none;">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>

<iframe id="exportFrame" style="display:none"></iframe>

<!-- Readable View Modal -->
<div class="modal fade" id="readableViewModal" tabindex="-1" aria-labelledby="readableViewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center flex-grow-1" id="readableViewModalLabel">@Model.Name</h5>
                <button type="button" id="btn-print-modal" class="btn btn-outline-primary btn-sm me-2" title="Print or Save as PDF">
                    <i class="bi bi-printer"></i> Print
                </button>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="readable-modal-body" style="max-width: 900px; margin: 0 auto; position: relative;">

                <!-- Cover Image or Map Snapshot -->
                @if (!string.IsNullOrWhiteSpace(Model.CoverImageUrl))
                {
                    <div class="mb-3">
                        <img src="@Model.CoverImageUrl" class="img-fluid w-100 rounded" alt="Cover for @Model.Name" style="max-height: 400px; object-fit: cover;"/>
                    </div>
                }
                else if (Model.CenterLat.HasValue && Model.CenterLon.HasValue)
                {
                    <!-- Map snapshot using thumbnail service -->
                    <div class="mb-3">
                        <img src="/thumbs/trips/@Model.Id-800x450.jpg?v=@Model.UpdatedAt.Ticks"
                             class="img-fluid w-100 rounded"
                             alt="Map of @Model.Name"
                             style="max-height: 400px; object-fit: cover;"/>
                    </div>
                }

                <!-- Trip metadata -->
                <div class="row small mb-3">
                    @if (!string.IsNullOrWhiteSpace(Model.User?.DisplayName))
                    {
                        <div class="col-md-6">
                            <strong class="text-muted">Trip by:</strong> @Model.User.DisplayName
                        </div>
                    }
                    <div class="col-md-6">
                        <strong class="text-muted">Updated:</strong> @Model.UpdatedAt.ToString("yyyy-MMM-dd HH:mm")
                    </div>
                </div>

                <!-- Map Snapshot (if not shown as cover) -->
                @if (!string.IsNullOrWhiteSpace(Model.CoverImageUrl) && Model.CenterLat.HasValue && Model.CenterLon.HasValue)
                {
                    <div class="mb-3">
                        <img src="/thumbs/trips/@Model.Id-800x450.jpg?v=@Model.UpdatedAt.Ticks"
                             class="img-fluid w-100 rounded"
                             alt="Map of @Model.Name"
                             style="max-height: 300px; object-fit: cover;"/>
                    </div>
                }

                <!-- Tags -->
                @if (Model.Tags?.Count > 0)
                {
                    <div class="mb-3">
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var tag in Model.Tags.OrderBy(t => t.Name))
                            {
                                <a href="@Url.RouteUrl("PublicTripsByTag", new { slug = tag.Slug })"
                                   class="badge rounded-pill text-bg-secondary text-decoration-none"
                                   style="font-size: 0.875rem; padding: 0.5em 0.75em;">
                                    <i class="bi bi-tag-fill"></i> @tag.Name
                                </a>
                            }
                        </div>
                    </div>
                }

                <!-- Notes -->
                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    <div class="trip-notes-readable mb-4">
                        <h6 class="text-muted mb-2">Notes</h6>
                        <div class="fs-6">
                            @Html.Raw(Model.Notes)
                        </div>
                    </div>
                }

                <!-- Regions -->
                <div class="regions-readable">
                    <h6 class="text-muted mb-3">Regions & Places</h6>
                    @foreach (var region in (Model.Regions ?? Enumerable.Empty<Region>()).OrderBy(r => r.DisplayOrder))
                    {
                        @if (region.Name == "Unassigned Places" && (region.Places == null || !region.Places.Any()))
                        {
                            continue;
                        }
                        <div class="region-readable mb-4 pb-3 border-bottom">
                            <h5 class="mb-2">@region.Name</h5>

                            @if (!string.IsNullOrWhiteSpace(region.Notes))
                            {
                                <div class="mb-3 text-muted">
                                    @Html.Raw(region.Notes)
                                </div>
                            }

                            @if (region.Places?.Count > 0)
                            {
                                <div class="places-list">
                                    @foreach (var place in region.Places.OrderBy(p => p.DisplayOrder))
                                    {
                                        var iconName = string.IsNullOrWhiteSpace(place.IconName) ? "marker" : place.IconName.Trim();
                                        var bgClass = string.IsNullOrWhiteSpace(place.MarkerColor) ? "bg-blue" : place.MarkerColor.Trim();

                                        <div class="place-item mb-2 ps-3">
                                            <div class="d-flex align-items-start">
                                                @await Html.PartialAsync("~/Areas/User/Views/Trip/Partials/_MapIcon.cshtml", (iconName, bgClass))
                                                <div class="flex-grow-1">
                                                    <strong>@place.Name</strong>
                                                    @if (!string.IsNullOrWhiteSpace(place.Notes))
                                                    {
                                                        <div class="small text-muted mt-1">
                                                            @Html.Raw(place.Notes)
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Back to Top Button -->
                <button type="button"
                        id="btn-back-to-top"
                        class="btn btn-primary rounded-circle position-fixed"
                        style="bottom: 2rem; right: 2rem; width: 50px; height: 50px; display: none; z-index: 1000;"
                        title="Back to top">
                    <i class="bi bi-arrow-up"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/tripViewer.js"></script>
    <script>
        // Clone trip confirmation
        document.getElementById('clone-trip-form')?.addEventListener('submit', function(e) {
            e.preventDefault();
            const form = this;
            const btn = form.querySelector('button[type="submit"]');

            showConfirmationModal({
                title: 'Clone Trip',
                message: 'Clone this trip to your account? You will be able to edit and customize your copy.',
                confirmText: 'Clone Trip',
                onConfirm: function() {
                    // Show loading state
                    if (btn) {
                        btn.disabled = true;
                        btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Cloning...';
                    }
                    form.submit();
                }
            });
        });

        // Proxy images in readable modal when it opens
        const readableModal = document.getElementById('readableViewModal');
        const modalBody = document.getElementById('readable-modal-body');
        const backToTopBtn = document.getElementById('btn-back-to-top');

        if (readableModal) {
            readableModal.addEventListener('shown.bs.modal', function() {
                // Proxy all images in the modal to avoid CORS issues
                readableModal.querySelectorAll('img').forEach(img => {
                    const orig = img.src;
                    if (orig && !orig.includes('/Public/ProxyImage')) {
                        img.setAttribute('data-original', orig);
                        img.src = `/Public/ProxyImage?url=${encodeURIComponent(orig)}`;
                    }
                });

                // Linkify plain text URLs in the modal
                const urlRegex = /(https?:\/\/[^\s<>"]+)/gi;
                const textNodes = [];

                // Find all text nodes in the modal
                function getTextNodes(node) {
                    if (node.nodeType === 3) { // Text node
                        textNodes.push(node);
                    } else if (node.nodeType === 1 && node.nodeName !== 'SCRIPT' && node.nodeName !== 'STYLE' && node.nodeName !== 'A') {
                        for (let child of node.childNodes) {
                            getTextNodes(child);
                        }
                    }
                }

                getTextNodes(readableModal.querySelector('.modal-body'));

                // Replace plain text URLs with links
                textNodes.forEach(textNode => {
                    const text = textNode.textContent;
                    if (urlRegex.test(text)) {
                        const span = document.createElement('span');
                        span.innerHTML = text.replace(urlRegex, (url) => {
                            const cleanUrl = url.trim();
                            return `<a href="${cleanUrl}" target="_blank" rel="noopener noreferrer" style="color: rgb(26, 115, 232);">${cleanUrl}</a>`;
                        });
                        textNode.parentNode.replaceChild(span, textNode);
                    }
                });

                // Make existing links clickable and open external links in new tab
                const currentDomain = window.location.hostname;
                readableModal.querySelectorAll('a').forEach(link => {
                    // Enable clicking
                    link.style.pointerEvents = 'auto';
                    link.style.cursor = 'pointer';

                    try {
                        const url = new URL(link.href, window.location.href);
                        // If external domain, open in new tab
                        if (url.hostname !== currentDomain) {
                            link.setAttribute('target', '_blank');
                            link.setAttribute('rel', 'noopener noreferrer');
                        }
                    } catch (e) {
                        // If URL parsing fails, it's likely a relative link, leave it as is
                    }
                });
            });

            // Back to top button functionality
            if (modalBody && backToTopBtn) {
                modalBody.addEventListener('scroll', function() {
                    if (modalBody.scrollTop > 300) {
                        backToTopBtn.style.display = 'block';
                    } else {
                        backToTopBtn.style.display = 'none';
                    }
                });

                backToTopBtn.addEventListener('click', function() {
                    modalBody.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }
        }

        // Print button functionality
        document.getElementById('btn-print-modal')?.addEventListener('click', async function() {
            // Create a print-friendly version by cloning the modal body
            const printWindow = window.open('', '', 'width=800,height=600');
            const modalContent = document.querySelector('#readable-modal-body').cloneNode(true);

            // Remove the back-to-top button from print
            const backToTopInPrint = modalContent.querySelector('#btn-back-to-top');
            if (backToTopInPrint) {
                backToTopInPrint.remove();
            }

            // Replace all images with server-side optimized versions
            const images = modalContent.querySelectorAll('img');
            const currentOrigin = window.location.origin;

            images.forEach(img => {
                const currentSrc = img.src;

                // Skip local marker icons (don't optimize them)
                if (currentSrc.includes('/icons/wayfarer-map-icons/')) {
                    return;
                }

                // If already using ProxyImage, add optimization parameters
                if (currentSrc.includes('/Public/ProxyImage')) {
                    const url = new URL(currentSrc, window.location.origin);
                    // Add optimization parameters: maxWidth=600, quality=85
                    // 85% JPEG quality - excellent for print with good compression
                    url.searchParams.set('maxWidth', '600');
                    url.searchParams.set('quality', '85');
                    img.src = url.toString();
                } else if (currentSrc.startsWith('http') && !currentSrc.startsWith(currentOrigin + '/')) {
                    // For external images only (not local), route through proxy with optimization
                    img.src = `/Public/ProxyImage?url=${encodeURIComponent(currentSrc)}&maxWidth=600&quality=85`;
                }

                img.style.maxWidth = '100%';
                img.style.height = 'auto';
            });

            printWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>${document.getElementById('readableViewModalLabel').textContent}</title>
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
                    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
                    <style>
                        ${String.fromCharCode(64)}page {
                            size: A4;
                            margin: 3cm 2cm 2cm 3.5cm;
                        }
                        body {
                            padding: 0;
                            font-size: 12pt;
                        }
                        ${String.fromCharCode(64)}media print {
                            body {
                                padding: 0;
                                margin: 0;
                                font-size: 11pt;
                            }
                            .no-print { display: none !important; }
                            img {
                                max-width: 100% !important;
                                height: auto !important;
                                page-break-inside: avoid;
                            }
                        }
                        ${String.fromCharCode(64)}media screen {
                            body {
                                padding: 2rem;
                                font-size: 14pt;
                            }
                        }
                        h5 { text-align: center; margin-bottom: 2rem; font-size: 1.5rem; }
                        h6 { font-size: 1.1rem; }
                        .region-readable h5 { font-size: 1.3rem; }
                        .region-readable { page-break-inside: avoid; }
                    </style>
                </head>
                <body>
                    <h5>${document.getElementById('readableViewModalLabel').textContent}</h5>
                    ${modalContent.innerHTML}
                    <` + `script>
                        window.onload = function() {
                            setTimeout(function() {
                                window.print();
                            }, 500);
                        };
                    </` + `script>
                </body>
                </html>
            `);
            printWindow.document.close();
        });
    </script>
}


